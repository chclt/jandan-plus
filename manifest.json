{
    "manifest_version": 3,
    "name": "煎煎煎蛋",
    "description": "煎蛋网体验优化",
    "version": "2.2",
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [ "components/style/index.js" ],
            "css": [ "components/style/index.css", "components/style/skware-icons.css" ],
            "matches": [ "*://jandan.net/*" ],
            "run_at": "document_end"
        },
        {
            "css": [ "components/style/page_home.css" ],
            "matches": [ "*://jandan.net/", "*://jandan.net/page/*" ],
            "run_at": "document_end"
        },
        {
            "css": [ "components/style/comp_content.css" ],
            "matches": [
                "*://jandan.net/qa*",
                "*://jandan.net/treehole*",
                "*://jandan.net/ooxx*",
                "*://jandan.net/pic*",
                "*://jandan.net/top*"
            ],
            "run_at": "document_end"
        },
        {
            "css": [ "components/style/page_top.css" ],
            "matches": [
                "*://jandan.net/top*"
            ],
            "run_at": "document_end"
        },
        {
            "js": [ "components/style/comp_button_new.js" ],
            "css": [ "components/style/comp_button_new.css" ],
            "matches": [
                "*://jandan.net/qa*",
                "*://jandan.net/treehole*",
                "*://jandan.net/ooxx*",
                "*://jandan.net/pic*"
            ],
            "run_at": "document_end"
        },
        {
            "js": [ "components/gif-controller/index.js" ],
            "css": [ "components/gif-controller/index.css" ],
            "matches": [
                "*://jandan.net/top*",
                "*://jandan.net/qa*",
                "*://jandan.net/treehole*",
                "*://jandan.net/ooxx*",
                "*://jandan.net/pic*",
                "*://jandan.net/t/*"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "redirect2sina",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "host_permissions": [
        "*://jandan.net/*",
        "*://i.jandan.net/*",
        "*://*.sinaimg.cn/*",
        "*://*.moyu.im/*",
        "*://*.toto.im/*"
    ]
}